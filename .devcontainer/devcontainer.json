{
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-vscode.makefile-tools",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "extensions.verifySignature": false,
                "python.analysis.extraPaths": [
                    "/workspaces"
                ],
            }
        }
    }
    ,
    "name": "Python",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": ".."
    }
}